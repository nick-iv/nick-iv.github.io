include ./includes/footer_menu
extends ./includes/layout

block title
    | Фотографии — Nick Iv

block head
        meta(property="og:title",        content="Фотоальбом Nick Iv")
        meta(property="og:description",  content="Фотографии архитектуры и природы сделанные")
        meta(property="og:url",          content="https://nick-iv.me/photos.html")
        meta(property="og:image",        content="https://nick-iv.me/static/images/smm-photo.png" )
        meta(property="og:image:type",   content="image/png")
        meta(property="og:image:width",  content="398")
        meta(property="og:image:height", content="208")

        script(type="text/javascript", src="https://yastatic.net/jquery/2.2.3/jquery.min.js")
        script(type="text/javascript", src="https://yastatic.net/underscore/1.8.3/underscore-min.js")
        script(type="text/javascript", src="https://yastatic.net/backbone/1.2.3/backbone-min.js")
        script(type="text/javascript", src="/static/js/fotki.js")
        script(type="text/javascript", src="/static/js/gallery.js")

block body
    body.bLayout.bPage.bPhotoPage
        .bPage__eWrapper
            header.bPage__eHeader
                span.bPage__eHeaderItem
                    img.bNavi__eAvatar(src="/static/images/ava-photos.svg", alt="")

                span.bPage__eHeaderItem
                    h1.bPage__eTitle Фотографии
                    span &nbsp;/&nbsp;
                    a(href="/") На&nbsp;главную

            article.bPage__eArticle
                noscript Фотографии получится посмотреть только с включенным JavaScript. Нет ничего зазорного, в том, чтобы включить его.

                .bPhotoPage__eHiddenPhoto
                .bPhotoPage__eAlbums#albums
                .bPhotoPage__ePhotos#photos

        +footerMenu('photos')
        include includes/analytics
